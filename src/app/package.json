{
  "name": "ChatWorkstation",
  "description": "Your free AI model connection client.",
  "author": "Travis Tang <chatworkstation@gmail.com>",
  "version": "1.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "productName": "ChatWorkstation",
    "appId": "com.chatworkstation.app",
    "directories": {
      "output": "../../dist/ChatWorkStation"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/static/icon.icns",
      "protocols": [
        {
          "name": "Chat Workstation Protocol",
          "schemes": [
            "chatws"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "src/static/applogo-180.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/static/applogo-180.ico",
      "uninstallerIcon": "src/static/applogo-180.ico",
      "installerHeaderIcon": "src/static/applogo-180.ico",
      "license": "../../EndUserLicenseAgreements.txt",
      "installerSidebar": "src/static/installer_side.bmp",
      "uninstallerSidebar": "src/static/installer_side.bmp",
      "shortcutName": "Chat Workstation",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "AI Assistant",
      "displayLanguageSelector": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "files": [],
    "extraResources": [
      {
        "from": "../../dist/ChatWorkstation/_internal/",
        "to": "_internal/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../dist/ChatWorkstation/Backend",
        "to": "Backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../dist/ChatWorkstation/.env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../dist/ChatWorkstation/build/",
        "to": "build/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-toolbar": "^1.1.0",
    "@radix-ui/themes": "^3.1.1",
    "@stitches/react": "^1.2.8",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.2",
    "concurrently": "^8.2.2",
    "electron-is-dev": "^3.0.1",
    "i18next": "^23.11.5",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "react-scripts": "5.0.1",
    "sass": "^1.77.6",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "react-scripts build && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  }
}
